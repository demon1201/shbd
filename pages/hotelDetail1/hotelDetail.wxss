/* pages/hotelDetail/hotelDetail.wxss */
page{
  background: #fafafa;
}
.detail{
  box-sizing: border-box;
  padding: 42rpx 20rpx;
  width: 100%;
}
.detail-time{
  width: 100%;
  height: 102rpx;
  opacity: 1;
  background: #f0f0f0;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: rgba(153,153,153,0.90);
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 24rpx;
}
.detail-tiem{
  margin-left: 50rpx;
  color: #333333;
}
.detail-d1{
  width: 100%;
  height: 518rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 16rpx;
  margin-top: 12rpx;
}
.d1-title{
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 24rpx;
  border-bottom: 4rpx solid #fafafa;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #000000;
}
.d1-text{
  font-size: 22rpx;
  height: 428rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 44rpx;
  box-sizing: border-box;
  padding: 24rpx 28rpx 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}