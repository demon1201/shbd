/* pages/memberActivity/memberActivity.wxss */
activity-page{
  margin: 0;
}
page{
  background: #fafafa;
}
.act-top{
  width: 100%;
  height: 80rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 0px 0px 16rpx 16rpx;
  box-sizing: border-box;
  padding: 0 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.act-top__item{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
  width: auto;
}
.act-top__item_ico{
  width: 16rpx;
  height: 8rpx;
  margin-left: 6rpx;
}
.activity{
  margin-top: 60rpx;
}
.actt{
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #111111;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.gd{
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  margin-right: 16rpx;
}
.gdd{
  margin-left: auto;
}
.act-item{
  width: 100%;
  height: 438rpx;
  opacity: 1;
  background: #ffffff;
  margin-bottom: 40rpx;
  position: relative;
}
.act-item>image{
  width: 100%;
  height: 304rpx;
}
.act-item__title{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}
.tag{
  width: 112rpx;
  height: 44rpx;
  opacity: 1;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666666;
}
.act-tag{
  box-sizing: border-box;
  padding-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 12rpx;
}
.act-con{
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.picker_ico{
  width: 16rpx;
  height: 8rpx;
  opacity: 1;
  margin-left: 5rpx;
}
.picker{
  display: flex;
  align-items: center;
}
.v-tit{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 475rpx;
}
.hdz{
  width: 88rpx;
  height: 36rpx;
  opacity: 0.8;
  background: linear-gradient(130deg,#f68c00 9%, #f87351 92%);
  border-radius: 18rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}