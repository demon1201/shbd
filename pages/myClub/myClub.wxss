/* pages/myClub/myClub.wxss */
.main{
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx;
}
.item{
    display: flex;
    align-items: center;
    height: 212rpx;
    opacity: 1;
    background: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0px 6rpx 12rpx 0px rgba(0,0,0,0.08); 
    margin-bottom: 34rpx;
}
.item-right{
    width: 350rpx;
    height: 212rpx;
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #000000;
}
.item_left_img{
    width: 294rpx;
    height: 212rpx;
    opacity: 1;
    background: rgba(0,0,0,0.00);
    border-radius: 16rpx 0px 0px 16rpx;
    margin-right: 22rpx;
}
.item_wx{
    width: 52rpx;
    height: 52rpx;
    opacity: 1;
    border-radius: 50%;
    margin-left: auto;
    margin-top: 18rpx;
    margin-bottom: 8rpx;
}
.item_title{
    display: flex;
    align-items: center;
    height: 60rpx;
}
.item_t1{
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #111111;
}
.item_t2{
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #999999;
    margin-bottom: 26rpx;
}
.item_t3{
    height: 70rpx;
    overflow: hidden;
}
.wx{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1111;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    background-color: rgb(0, 0, 0, .5);
}
.wx-ewm{
    width: 500rpx;
    height: 500rpx;
}
.wx_t{
    font-size: 25rpx;
    color: #ffffff;
    margin-top: 20rpx;
}