/* pages/yhj/yhj.wxss */
.page{
    width: 100%;
    height: 100%;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background-color: #fafafa;
    align-items: center;
}
.yhq-cont{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.yhq-item{
    display: flex;
    align-items: center;
    height: 222rpx;
    opacity: 1;
    border: 2rpx solid #fafafa;
    border-radius: 12rpx;
    padding: 0 24rpx;
    width: 662rpx;
    margin-bottom: 10rpx;
}
.yhq-active{
    border: 2rpx solid #86b7c1;
}
.y-img{
    width: 190rpx;
    height: 174rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 888;
}
.left-item{
    position: relative;
    z-index: 999;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    justify-content: center;
}
.yhq-left{
    height: 174rpx;
    width: 190rpx;
    position: relative;
    color: #fff;
}
.item{
    background: #f3f3f3;
    width: 100%;
    border-radius: 0px 6px 6px 0px;
    display: flex;
    align-items: center;
}
.yhq-right{
    font-size: 20rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #3d3d3d;
    margin-right: 64rpx;
    margin-left: auto;
}
.right-t1{
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    margin-bottom: 15rpx;
}
.zk{
    font-size: 84rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #ffffff;
}
.left-t1{
    font-size: 20rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    margin-bottom: 10rpx;
}
.send{
    width: 686rpx;
    height: 84rpx;
    background-color: #86B7C1;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 40rpx;
    color: #fff;
    margin-top: 500rpx;
    font-size: 24rpx;
}