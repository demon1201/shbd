/* pages/member/member.wxss */
page{
  background: #fafafa;
}
.member-page{
  width: 100%;
  box-sizing: border-box;
  padding: 36rpx 20rpx;
}
.member-page_type{
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #111111;
}
.scroll-view{
  white-space: nowrap;
  
}
.scroll-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 224rpx;
  width: 220rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
  background: #ffffff;
  border-radius: 16rpx;
}
.scroll-item_img{
  width: 220rpx;
  height: 152rpx;
  opacity: 1;
  background: rgba(0,0,0,0.00);
  border-radius: 16rpx 16rpx 0px 0px;
}
.scroll-view_H{
  white-space: nowrap;
  margin-top: 34rpx;
}
.scroll-view-item{
  height: 224rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 220rpx;
  margin-right: 20rpx;
  height: 224rpx;
}
.sv-text{
  width: 220rpx;
  height: 50rpx;
  opacity: 1;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.activity{
  margin-top: 60rpx;
}
.actt{
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #111111;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.gd{
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  margin-right: 16rpx;
}
.gdd{
  margin-left: auto;
}
.act-item{
  width: 100%;
  height: 438rpx;
  opacity: 1;
  background: #ffffff;
  margin-bottom: 40rpx;
  position: relative;
}
.act-item>image{
  width: 100%;
  height: 304rpx;
}
.act-item__title{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}
.tag{
  width: 112rpx;
  height: 44rpx;
  opacity: 1;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666666;
  float: left;
}


.act-tag{
  box-sizing: border-box;
  padding-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 12rpx;
}
.v-tit{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 475rpx;
}
.hdz{
  width: 88rpx;
  height: 36rpx;
  opacity: 0.8;
  background: linear-gradient(130deg,#f68c00 9%, #f87351 92%);
  border-radius: 18rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}