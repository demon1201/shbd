/* pages/missOrgan/missOrgan.wxss */
page{
    background: #fafafa;
}
.main{
    position: relative;
}
.top_img{
    width: 100%;
    height: 630rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 222;
}
.con{
    position: relative;
    z-index: 999;
}
.title{
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 36rpx;
}
.title_img{
    width: 140rpx;
    height: 150rpx;
    margin-right: 32rpx;
    border-radius: 5rpx;
}
.title_wx_ico{
    width: 52rpx;
    height: 52rpx;
    margin-top: 8rpx;
}
.right_r{
    display: flex;

}
.r_wx{
    width: 178rpx;
    height: 50rpx;
    opacity: 1;
    background: #ffffff;
    border-radius: 26rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    margin-left: auto;
}
.r1{
    font-size: 28rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #ffffff;
}
.title_right{
    width: 502rpx;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    line-height: 1.5;
}

.r2{
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #ffffff;
}
.right_txt{
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #ffffff;
}
.news__con{
    background: #fafafa;
    width: 100%;
    border-radius: 20rpx;
    box-sizing: border-box;
    padding: 30rpx 20rpx;
    margin-top: 74rpx;
}
.news__item{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: #ffffff;
    border-radius: 10rpx;
    padding-bottom: 26rpx;
    margin-bottom: 40rpx;
}
.item_img{
    width: 100%;
    height: 398rpx;
    margin-bottom: 10rpx;
}
.item_txt{
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #333333;
    box-sizing: border-box;
    padding-left: 20rpx;
}
.item_txt_title{
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #111111;
}

.item_txt view{
    margin-bottom: 10rpx;
}
.wx{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 1111;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    background-color: rgb(0, 0, 0, .5);
}
.wx-ewm{
    width: 500rpx;
    height: 500rpx;
}
.wx_t{
    font-size: 25rpx;
    color: #ffffff;
    margin-top: 20rpx;
}