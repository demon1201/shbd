/* pages/writeOffHistory/writeOffHistory.wxss */
.page-top{
    width: 100%;
    height: 80rpx;
    opacity: 1;
    background: #ffffff;
    border-radius: 0px 0px 16rpx 16rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-around;
    line-height: 80rpx;
    margin-bottom: 42rpx;
  
  }
  .page-top__item{
    height: 80rpx;
    text-emphasis: center;
    border-bottom: 6rpx #fff solid;
    display: flex;
    align-items: center;
  }
  .page-top__item_active{
    border-bottom: 6rpx #038c5b solid;
  }

.page-con{
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
}
.page-con__item{
    display: flex;
    margin-bottom: 20rpx;
}
.page-con__item_left{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 34rpx;
}
.page-con__item_left image{
    width: 72rpx;
    height: 72rpx;
    opacity: 1;
    border-radius: 50%;
}
.left-name{
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #111111;
}
.page-con__item_right{
    width: 564rpx;
    background: #ffffff;
    border-radius: 24rpx;
    box-sizing: border-box;
    padding: 20rpx 28rpx;
}
.right_r1{
    display: grid;
    grid-template-columns: repeat(2, 50%);
    font-size: 20rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #999999;
}
.right_r2{
    border-top: 2rpx solid #f5f5f5;
    margin-top: 18rpx;
    box-sizing: border-box;
    padding-top: 28rpx;
    display: flex;
    align-items: center;
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #333333;
}
.right_r2>image{
    width: 160rpx;
    height: 106rpx;
    margin-left: auto;
}
.r11_title{
    font-size: 28rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #111111;
    margin-bottom: 10rpx;
}
.icoo{
    width: 16rpx;
    height: 8rpx;
}