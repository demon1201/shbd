/* pages/myOrder/myOrder.wxss */
.page{
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
}
.page-top{
  width: 100%;
  height: 80rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 0px 0px 16rpx 16rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  line-height: 80rpx;
 

}
.page-top__item{
  height: 80rpx;
  text-emphasis: center;
  border-bottom: 6rpx #fff solid;
}
.page-top__item_active{
  border-bottom: 6rpx #038c5b solid;
}
.page-con{
  margin-top: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.page-con__item{
  box-sizing: border-box;
  padding: 0 20rpx 28rpx 30rpx;
  width: 100%;
  opacity: 1;
  background: #ffffff;
  border-radius: 8px;
  margin-bottom: 24rpx;
}
.page-con__item_title{
  display: flex;
  height: 76rpx;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.page-con__item_imgt{
  /* height: 282rpx; */
  height: 104rpx;
  margin-top: 24rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 8rpx;
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  /* border-bottom: 2rpx solid #f5f5f5; */
  line-height: 40rpx;
}
.page-con__item_imgt_left{
  width: 248rpx;
  height: 158rpx;
}
.page-con__item_imgt_right{
  display: flex;
  flex-direction: column;
}
.item_right_title{
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  margin-bottom: 15rpx;
}
.page-con__item_namep{
  height: 70rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}
.page-con__item_namep_price{
  color: #038C5B;
  margin-left: auto;
  box-sizing: border-box;
  padding-right: 20rpx;
}
.cancel,.pay{
  width: 63px;
  height: 27px;
  opacity: 1;
  border-radius: 9px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cancel{
  border: 1px solid #999999;
  color: #999999;
}
.pay{
  border: 1px solid #038c5b;
  color: #038C5B;
}
.item-btn{
  height: auto; 
  margin-top:24rpx; 
  border-bottom: none;
  justify-content: flex-end;
}
.item-prices{
  height: auto; 
  margin-top:25rpx; 
  border-bottom: none;
}

.page-pay{
  width: 100%;
  height: 100%;
}
.ddzf{
  height: 120rpx;
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #038c5b;
  box-sizing: border-box;
  padding-left: 46rpx;
}
.order{
  margin-top: 20rpx;
  font-size: 22rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
}
.bottom-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 116rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 16rpx 16rpx 0px 0px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.bbtn{
  width: 186rpx;
  height: 70rpx;
  opacity: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  
  border-radius: 18rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
}
.bbtn:first-child{
  margin-right: 16rpx;
  color: #999999;
  border: 2rpx solid #999999;
}
.bbtn:last-child{
  color: #ffffff;
  background: #038c5b;
  margin-right: 46rpx;
  border: 2rpx solid #038c5b;
}
.dialog-text{
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
  line-height: 24px;
  margin-top: 45rpx;
}
.weui-dialog{
  width: 546rpx;
}
.weui-dialog__hd{
  border-bottom: 1px solid #f5f5f5;
  height: 112rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}
.weui-dialog__bd{
  height: 184rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 0;
}
.weui-dialog__ft{
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #999999;
}
.weui-dialog__btn_default{
  font-weight: 400;
  color: #999;
}
.weui-dialog__btn_primary{
  font-weight: 400;
  color: #038C5B;
}
.none-order{
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  background-color: #fff;
  width: 710rpx;
  margin: 50rpx auto;
  border-radius: 20rpx;
}