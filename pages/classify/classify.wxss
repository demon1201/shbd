/* pages/catering/catering.wxss */
.page{
  width: 100%;
  height: 100%;
  background: #fafafa;
}
.page-top{
  width: 100%;
  height: 346rpx;
}
.page-top__img{
  width: 100%;
  height: 346rpx;
  padding: 0;
}
.page-con{
  box-sizing: border-box;
  padding: 20rpx;
}
.page-con__item{
  width: 100%;
  height: 208rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  font-size: 10px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding-left: 24rpx;
  position: relative;
}
.page-con__item_left{
  width: 226rpx;
  height: 160rpx;
  opacity: 1;
  background: rgba(0,0,0,0.00);
  border-radius: 8rpx;
}
.page-con__item_right{
  display: flex;
  flex-direction: column;
  height: 160rpx;
  margin-left: 24rpx;
}
.page-con__item_title{
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
}
.page-con__item_star{
  width: 24rpx;
  height: 24rpx;
  opacity: 1;
}
.page-con__item_star{
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}
.page-con__item_tags{
  display: flex
}
.page-con__item_tag{
  box-sizing: border-box;
  padding: 6rpx 12rpx;
  font-size: 18rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  display: flex;
  align-items: center;
  margin-right: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  color: #999999;
}
.page-con__item_tag_first{
  color: #b6881d;
  background: #fff5de;
  border-radius: 4px;
}
.type2{
  width: auto;
  padding: 0 15rpx;
  height: 36rpx;
  opacity: 0.8;
  background: linear-gradient(130deg,#f68c00 9%, #f87351 92%);
  border-radius: 18rpx;
  font-size: 20rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
  position: absolute;
  right: 467rpx;
  top: 29rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
