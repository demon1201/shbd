/* pages/mhsh/mhsh.wxss */
.main{
    width: 100%;
    box-sizing: border-box;
    height: 100%;
    background: url(https://pt.zerom.cn/uploads/shbd/bj.png);
    background-size: 100%;
}
.top-img{
    width: 100%;
    height: 496rpx;
}
.cont{
    width: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    margin-top: -100rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.img2{
    width: 355px;
    height: 89px;
}
.img1{
    width: 100%;
    height: 3088rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.img_title{
    width: 388rpx;
    height: 118rpx;
}
.img3{
    margin-top: 80rpx;
    margin-bottom: 60rpx;
}
.cont__txt{
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #000000;
    line-height: 1.8;
}
.cont__txt>view{
    text-indent: 48rpx;
}

.cont__txt>view:nth-child(1){
    margin-bottom: 10rpx;
}

.img4{
    margin-top: 60rpx;
    margin-bottom: 40rpx;
}
.img5{
    margin-top: 36rpx;
    margin-bottom: 40rpx;
}
.cont__items{
    display: flex;
    width: 100%;
}
.cont__item{
    width: 340rpx;
    box-sizing: border-box;
    padding: 32rpx;
    background: #f5f5f5;
    border-radius: 24rpx;
    margin-bottom: 30rpx;
}
.cont__item:nth-child(2n){
    margin-left: auto;
}
.cont__item2:nth-child(2n){
    margin-left: auto;
}
.item__title{
    font-size: 32rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #000000;
    margin-bottom: 13rpx;
}

.item__img{
    width: 276rpx;
    height: 252rpx;
    border-radius: 15rpx;
    margin-bottom: 20rpx;
}
.item__txt{
    font-size: 22rpx;
    font-family: PingFang SC, PingFang SC-Regular;
    font-weight: 400;
    text-align: left;
    color: #888888;
}
.hr{
    width: 100%;
    height: 0rpx;
    border-top: .5px solid #e5e5e5;
    margin: 18rpx  0;
}
.nav{
    font-size: 24rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    text-align: left;
    color: #000000;
}
.cont__item2{
    width: 340rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 117rpx;
}
.item2_title{
    font-size: 28rpx;
    font-family: PingFang SC, PingFang SC-Bold;
    font-weight: 700;
    color: #111111;
    margin-bottom: 18rpx;
}
.item2_img{
    width: 100%;
    height: 303rpx;
    border-radius: 15rpx;
}